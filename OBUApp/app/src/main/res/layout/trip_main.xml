<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    tools:context="com.example.mraxn.obuapp.MainActivity$PlaceholderFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">

            <TextView
                android:id="@+id/vd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Details:"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lpn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="LPN: "
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/vd_tv"
              />

            <EditText
                android:id="@+id/lpn_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vd_tv"
                android:maxLines="1"
                android:text="random"
                android:textColor="#2F4F4F"
                android:textSize="18sp"
                android:layout_toEndOf="@id/lpn_tv"
              />

            <TextView
                android:id="@+id/model_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="MODEL: "
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/lpn_tv"
              />

            <EditText
                android:id="@+id/model_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="VOLVO VNL 300"
                android:textColor="#2F4F4F"
                android:textSize="18sp"
                android:layout_below="@id/lpn_tv"
                android:layout_toRightOf="@id/model_tv"
              />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">

            <TextView
                android:id="@+id/td_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip Details:"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/origin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="ORIGIN: "
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/td_tv"
                />

            <EditText
                android:id="@+id/origin_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Chicago"
                android:textColor="#2F4F4F"
                android:textSize="18sp"
                android:layout_below="@id/td_tv"
                android:layout_toEndOf="@id/origin_tv"
                 />

            <TextView
                android:id="@+id/dest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="DEST: "
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/origin_tv"
              />

            <EditText
                android:id="@+id/dest_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Ottawa"
                android:textColor="#2F4F4F"
                android:textSize="18sp"
                android:layout_below="@id/origin_tv"
                android:layout_toRightOf="@id/dest_tv"
              />

          <TextView
              android:id="@+id/start_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="12dp"
              android:text="ST. D/T: "
              android:textColor="#000000"
              android:textSize="18sp"
              android:textStyle="bold"
              android:layout_below="@id/dest_tv"
            />

          <EditText
              android:id="@+id/start_et"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:text="2017-11-07-11:28:32"
              android:textColor="#2F4F4F"
              android:textSize="18sp"
              android:layout_below="@id/dest_tv"
              android:layout_toRightOf="@id/start_tv"
            />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>