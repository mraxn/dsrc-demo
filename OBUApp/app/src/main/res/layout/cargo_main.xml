<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    tools:context="com.example.mraxn.obuapp.MainActivity$PlaceholderFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">

            <TextView
                android:id="@+id/bd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Details:"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

          <TextView
            android:id="@+id/bname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="BNAME: "
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/bd_tv"
            />

          <EditText
            android:id="@+id/bname_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Acme"
            android:textColor="#2F4F4F"
            android:textSize="18sp"
            android:layout_below="@id/bd_tv"
            android:layout_toEndOf="@id/bname_tv"
            />

            <TextView
                android:id="@+id/bn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="BNo: "
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/bname_tv"
              />

            <EditText
                android:id="@+id/bn_text_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="54112925"
                android:textColor="#2F4F4F"
                android:textSize="18sp"
                android:layout_below="@id/bname_tv"
                android:layout_toEndOf="@id/bn_tv"
              />


            <CheckBox
              android:id="@+id/tt_cb"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:checked="true"
              android:layout_below="@id/bn_tv"
              android:layout_marginTop="6dp"
              />

            <TextView
                android:id="@+id/tt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="Trusted Trader"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_below="@id/bn_tv"
                android:layout_toEndOf="@id/tt_cb"
              />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">

            <TextView
                android:id="@+id/cd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargo Details:"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cert_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="CERT NO.: "
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/cd_tv"
                />

            <EditText
                android:id="@+id/cn_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="56677888878"
                android:textColor="#2F4F4F"
                android:textSize="18sp"
                android:layout_below="@id/cd_tv"
                android:layout_toEndOf="@id/cert_tv"
                 />

            <TextView
                android:id="@+id/cid_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="CARRIER ID: "
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/cert_tv"
              />

            <EditText
                android:id="@+id/cid_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="887888787887"
                android:textColor="#2F4F4F"
                android:textSize="18sp"
                android:layout_below="@id/cert_tv"
                android:layout_toRightOf="@id/cid_tv"
              />

          <TextView
              android:id="@+id/cargo_desc_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="12dp"
              android:text="CARGO DESCR.: "
              android:textColor="#000000"
              android:textSize="18sp"
              android:textStyle="bold"
              android:layout_below="@id/cid_tv"
            />

          <EditText
              android:id="@+id/cargo_desc_et"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:text="Laptops"
              android:textColor="#2F4F4F"
              android:textSize="18sp"
              android:layout_below="@id/cid_tv"
              android:layout_toRightOf="@id/cargo_desc_tv"
            />
          <TextView
              android:id="@+id/nitems_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="12dp"
              android:text="# OF ITEMS: "
              android:textColor="#000000"
              android:textSize="18sp"
              android:textStyle="bold"
              android:layout_below="@id/cargo_desc_tv"
            />

          <EditText
              android:id="@+id/nitems_et"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:text="50"
              android:textColor="#2F4F4F"
              android:textSize="18sp"
              android:inputType="number"
              android:layout_below="@id/cargo_desc_tv"
              android:layout_toRightOf="@id/nitems_tv"
            />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>